@model Entities.OutOffer
@{
    ViewBag.Title = "OfferResult";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}
@Html.Partial("~/views/shared/_NavBar.cshtml")
<ol class="breadcrumb">
    <li><a href="#">Producción</a></li>
    <li><a href="#">Perfilar Cliente</a></li>
</ol>
<div class="col-xs-12 form-group">
    <div class="panel panel-default">
        <fieldset class="form-group">
            <legend>Resultado Perfilamiento</legend>
            
            <table class="table table-hover">
                <thead>
                    <tr style="border:hidden;"><td>Detalle</td><td>@Model.passDetail</td><td>Continua</td><td>@Model.pass</td></tr>
                    <tr style="border:hidden;"><td>Identificacion</td><td>@Model.identifier</td><td>Detalle Identificación</td><td>@Model.detail</td></tr>
                </thead>
            </table>
                <p>Tasas</p>
                <table class="table table-hover">
                    <tbody>

                        <tr><td>Tasa Seguro</td><td>@Model.insuranceRate</td><td>Monto Maximo</td><td>@Model.maximumAmount</td><td>Cuota</td><td>@Model.monthlyPayment</td></tr>
                        <tr><td>Tasa Administrativa</td><td>@Model.rate_admin_fee</td><td>Plazo Maximo</td><td>@Model.maximunTerm</td><td>Capacidad</td><td>@Model.capacity</td></tr>
                        <tr><td>Tasa Aval</td><td>@Model.rateGuarantee</td><td>Cuota Sugerida</td><td>@Model.suggestedMonthlyPayment</td><td colspan="2"></td></tr>
                    </tbody>
                </table>

                <div class="panel-group">
                    <button type="submit" class="btn btn-primary btn-xs">Aceptar</button>
                    <button type="submit" class="btn btn-primary btn-xs">Rechazar</button>
                    <button type="submit" class="btn btn-primary btn-xs">Recalcular</button>
                </div>

</fieldset>
    </div>
</div>
